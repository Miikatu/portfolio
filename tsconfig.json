{
  "compilerOptions": {
    "target": "es2017", // Set the JavaScript language version for emitted JavaScript and include compatible library declarations.
    "module": "commonjs", // Specify what module code is generated.
    "baseUrl": ".", // Specify the base directory to resolve non-relative module names.
    "paths": {
      "@/*": ["./*"]
    },
    "esModuleInterop": true, // Emit additional JavaScript to ease support for importing CommonJS modules. This enables 'allowSyntheticDefaultImports' for type compatibility.
    "forceConsistentCasingInFileNames": true, // Ensure that casing is correct in imports.
    "strict": true, // Enable all strict type-checking options.
    "skipLibCheck": true, // Skip type checking all .d.ts files.
    "lib": ["dom", "dom.iterable", "esnext"], // Specify a set of bundled library declaration files that describe the target runtime environment.
    "allowJs": true, // Allow JavaScript files to be compiled.
    "noEmit": true, // Do not emit outputs.
    "incremental": true, // Enable incremental compilation.
    "moduleResolution": "node", // Specify module resolution strategy: 'node' for Node.js.
    "resolveJsonModule": true, // Include modules imported with .json extension.
    "isolatedModules": true, // Ensure that each file can be safely transpiled without relying on other imports.
    "jsx": "preserve", // Preserve JSX as part of the output to be further transformed by another step.
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["./src/**/*", ".next/types/**/*.ts"], // Include all TypeScript and JavaScript files in the src directory and Next.js types.
  "exclude": ["node_modules"] // Exclude node_modules directory.
}
